<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="270dp"
            android:layout_height="350dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/item_text"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/author_pic"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/image_like"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/item_author"
            android:layout_marginTop="82dp"
            android:layout_below="@+id/item_image"
            android:layout_alignParentStart="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/item_date"
            android:layout_gravity="right"
            android:layout_below="@+id/item_author"
            android:layout_toLeftOf="@+id/item_text"
            android:layout_alignParentStart="true"/>

    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/item_image"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>

    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/image_like"
            android:src="@drawable/like"
            android:layout_alignTop="@+id/item_author"
            android:layout_centerHorizontal="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/text_likes"
            android:layout_alignStart="@+id/image_like"
            android:layout_below="@+id/image_like"
            android:singleLine="true"
            android:text="321"/>

    <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/image_comment"
            android:src="@drawable/comment"
            android:layout_below="@+id/item_text"
            android:layout_alignEnd="@+id/item_text"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/text_comments"
            android:layout_below="@+id/image_comment"
            android:layout_alignEnd="@+id/item_text"
            android:layout_alignStart="@+id/image_comment"
            android:singleLine="true"
            android:text="321"/>

    <ImageView
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:id="@+id/author_pic"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/image_like"/>

</RelativeLayout>